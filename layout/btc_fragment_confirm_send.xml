<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_btc_confirm_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bitcoinlogo2234"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        app:srcCompat="@drawable/bitcoin" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/montserratregular"
        android:gravity="center_horizontal"
        android:text="CONFIRMATION"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/header_btc_to"
        android:layout_width="87dp"
        android:layout_height="49dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="-32dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserratmedium"
        android:gravity="center"
        android:text="To:"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/header_btc_amount"
        android:layout_width="87dp"
        android:layout_height="49dp"
        android:layout_below="@+id/header_btc_to"
        android:layout_alignStart="@+id/header_btc_to"
        android:fontFamily="@font/montserratmedium"
        android:gravity="center"
        android:text="Amount:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/view_btc_address_confirm"
        android:layout_width="233dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/header_btc_to"
        android:layout_toEndOf="@+id/header_btc_to"
        android:fontFamily="@font/montserratbold"
        android:gravity="center_vertical|center"
        android:inputType="text"
        android:text="@string/insert_btc_address"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/view_edit_btc_send_amount"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:layout_below="@+id/header_btc_to"
        android:layout_toEndOf="@+id/header_btc_to"
        android:fontFamily="@font/montserratbold"
        android:gravity="center_vertical|center"
        android:text="@string/insert_btc_amount"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btc_algo"
        android:layout_width="43dp"
        android:layout_height="49dp"
        android:layout_below="@+id/header_btc_to"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView3"
        android:fontFamily="@font/montserratbold"
        android:gravity="center_horizontal|center"
        android:text="BTC" />

    <Button
        android:id="@+id/btc_confirm_send_final"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/montserratregular"
        android:text="@string/button_send_btc"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cancel_btc_send_final"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btc_confirm_send_final"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-89dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserratregular"
        android:text="@android:string/cancel"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />
</RelativeLayout>