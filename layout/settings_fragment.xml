<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:background="@color/colorPrimary"
    tools:context=".settingsFragment">

    <Button
        android:id="@+id/transaction_history_button"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="330dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserratregular"
        android:text="Transaction History"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/general_pref_page_butt"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="88dp"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/pref_header_general"
        android:contextClickable="true"
        android:focusable="auto"
        android:fontFamily="@font/montserratregular"
        android:text="@string/pref_header_general"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/notif_page_button"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="169dp"
        android:background="@android:color/background_light"
        android:contentDescription="@string/pref_header_notifications"
        android:contextClickable="true"
        android:fontFamily="@font/montserratregular"
        android:text="@string/pref_header_notifications"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/recovery_backup_page_button"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="412dp"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/pref_title_display_name"
        android:fontFamily="@font/montserratregular"
        android:text="@string/recovery_page_button_title"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/settings2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserratregular"
        android:text="@string/navigation_settings"
        android:textAlignment="center"
        android:textSize="36sp" />

    <Button
        android:id="@+id/help_button"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="249dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserratregular"
        android:text="Help"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />


</FrameLayout>
