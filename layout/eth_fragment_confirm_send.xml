<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/eth_final_send"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:layout_above="@+id/cancel_eth"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient"
        android:fontFamily="@font/montserratregular"
        android:text="@string/button_send_eth"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="451dp" />

    <TextView
        android:id="@+id/eth_acro"
        android:layout_width="44dp"
        android:layout_height="49dp"
        android:layout_below="@+id/to2354"
        android:layout_toEndOf="@+id/view_confirm_eth_amount"
        android:fontFamily="@font/montserratbold"
        android:gravity="center_vertical"
        android:text="ETH"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="330dp" />

    <TextView
        android:id="@+id/view_eth_confirm_address"
        android:layout_width="216dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/to2354"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/to2354"
        android:fontFamily="@font/montserratbold"
        android:gravity="center_vertical"
        android:text="@string/insert_eth_address"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="518dp" />

    <TextView
        android:id="@+id/amount35"
        android:layout_width="81dp"
        android:layout_height="49dp"
        android:layout_below="@+id/to2354"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserratmedium"
        android:gravity="center_vertical"
        android:text="@string/amt"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/view_confirm_eth_amount"
        android:layout_width="172dp"
        android:layout_height="49dp"
        android:layout_below="@+id/to2354"
        android:layout_toEndOf="@+id/to2354"
        android:fontFamily="@font/montserratbold"
        android:gravity="center_vertical"
        android:text="@string/insert_eth_amount"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="279dp" />

    <TextView
        android:id="@+id/to2354"
        android:layout_width="81dp"
        android:layout_height="49dp"
        android:layout_below="@+id/confirmo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserratmedium"
        android:gravity="center_vertical"
        android:text="@string/to"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="327dp" />

    <TextView
        android:id="@+id/confirmo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/montserratregular"
        android:text="CONFIRMATION"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="154dp" />

    <ImageView
        android:id="@+id/eth_logo335"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="147dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ethlogo"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="36dp" />

    <Button
        android:id="@+id/cancel_eth"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserratregular"
        android:text="@android:string/cancel"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="554dp" />

</RelativeLayout>
