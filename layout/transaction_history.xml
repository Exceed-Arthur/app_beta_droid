<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_txns"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/history_logo"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="49dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/baseline_history_24px" />

    <TextView
        android:id="@+id/title_transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="169dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserratregular"
        android:text="Transaction History"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/eth_button_2"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_gravity="right"
        android:layout_marginTop="256dp"
        android:layout_marginRight="32dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ethlogo" />

    <ImageButton
        android:id="@+id/btc_button_22"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="256dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/bitcoin" />

    <ImageButton
        android:id="@+id/exc_button_2"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_gravity="center|fill"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="256dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/image2vector__2" />

    <TextView
        android:id="@+id/title_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="32dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserratregular"
        android:text="Click to view in block explorer."
        android:textAlignment="center"
        android:textSize="24sp" />

</FrameLayout>